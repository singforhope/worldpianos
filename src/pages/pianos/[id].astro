---
import MainLayout from "../../layouts/MainLayout.astro";
import { getPianoById } from "../../utils/dataService";

const { id } = Astro.params;
let piano = null;
let error = null;

try {
  if (!id) {
    throw new Error("Piano ID is required");
  }
  piano = await getPianoById(id);
} catch (err) {
  console.error(`Error fetching piano with id ${id}:`, err);
  error = err instanceof Error ? err.message : "Failed to load piano data";
}
---

<MainLayout>
    <div class="container mx-auto px-4 py-8">
        {
            error && (
                <div class="alert alert-error">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="stroke-current shrink-0 h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                    </svg>
                    <span>{error}</span>
                </div>
            )
        }
        {
            !error && !piano && (
                <div class="flex justify-center items-center h-64">
                    <div class="loading loading-spinner loading-lg"></div>
                </div>
            )
        }
        {
            piano ? (
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    {/* Piano Information Card */}
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h1 class="card-title text-3xl">{piano.name}</h1>
                            <div class="flex flex-wrap gap-2 mt-4">
                                <div class="badge badge-primary">
                                    {piano.type}
                                </div>
                                <div class="badge badge-success">
                                    {piano.condition}
                                </div>
                                <div class="badge badge-info">
                                    {piano.access}
                                </div>
                            </div>
                            <div class="mt-6 space-y-4">
                                <div>
                                    <h2 class="text-xl font-semibold">
                                        Location
                                    </h2>
                                    <p class="text-base-content/70">
                                        {piano.location}
                                    </p>
                                </div>
                                <div>
                                    <h2 class="text-xl font-semibold">
                                        Description
                                    </h2>
                                    <p class="text-base-content/70">
                                        {piano.description}
                                    </p>
                                </div>
                                <div>
                                    <h2 class="text-xl font-semibold">
                                        Last Maintained
                                    </h2>
                                    <p class="text-base-content/70">
                                        {piano.last_maintained || "Unknown"}
                                    </p>
                                </div>
                                {piano.verified && (
                                    <div class="mt-2">
                                        <span class="badge badge-success">Verified</span>
                                    </div>
                                )}
                            </div>
                            <div class="card-actions justify-end mt-6">
                                <button
                                    onclick={`openReportModal('${piano.name.replace(/'/g, "\\'")}', '${piano.id}')`}
                                    class="btn btn-outline btn-error"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                    Report Issue
                                </button>
                                <a
                                    href={`/map?pianoId=${piano.id}`}
                                    class="btn btn-primary"
                                >
                                    View on Map
                                </a>
                            </div>
                        </div>
                    </div>

                    {/* Map Card */}
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title">Location Map</h2>
                            <div
                                id="piano-map"
                                class="w-full h-[600px] rounded-lg"
                            />
                        </div>
                    </div>
                </div>
            ) : (
                <div class="alert alert-error">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="stroke-current shrink-0 h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                    </svg>
                    <span>Piano not found</span>
                </div>
            )
        }
    </div>
</MainLayout>

<script>
    import mapboxgl from "mapbox-gl";
    mapboxgl.accessToken =
        "pk.eyJ1Ijoic2ZoYWRtaW4iLCJhIjoiY2t6bWZnY2VhNWY0djJwdHZhZnpvY3prbSJ9.5vyd64pGtGwl9YfMNFH9eQ";

    // Get piano data from the page
    const pianoData = {
        id: document
            .querySelector("[data-piano-id]")
            ?.getAttribute("data-piano-id"),
        coordinates: JSON.parse(
            document
                .querySelector("[data-piano-coordinates]")
                ?.getAttribute("data-piano-coordinates") || "[0,0]",
        ),
        name: document
            .querySelector("[data-piano-name]")
            ?.getAttribute("data-piano-name"),
        location: document
            .querySelector("[data-piano-location]")
            ?.getAttribute("data-piano-location"),
    };

    if (pianoData.id && pianoData.coordinates) {
        const map = new mapboxgl.Map({
            container: "piano-map",
            style: "mapbox://styles/mapbox/navigation-day-v1",
            center: pianoData.coordinates,
            zoom: 15,
            pitch: 60,
            bearing: 0,
        });

        map.on("load", () => {
            // Add navigation controls
            map.addControl(new mapboxgl.NavigationControl(), "top-right");

            // Add marker
            new mapboxgl.Marker({
                color: "#FF0000",
                scale: 0.8,
            })
                .setLngLat(pianoData.coordinates)
                .addTo(map);

            // Add popup
            new mapboxgl.Popup({ offset: 25 })
                .setLngLat(pianoData.coordinates)
                .setHTML(
                    `
                    <div class="p-2">
                        <h3 class="font-bold text-lg">${pianoData.name}</h3>
                        <p class="text-sm text-base-content/70">${pianoData.location}</p>
                    </div>
                `,
                )
                .addTo(map);
        });
    }
</script>

<style>
    @import "https://unpkg.com/mapbox-gl@2.15.0/dist/mapbox-gl.css";

    #piano-map {
        border-radius: 0.5rem;
    }
</style>

{/* Add data attributes for the piano information */}
{
    piano && (
        <div
            data-piano-id={piano.id}
            data-piano-coordinates={JSON.stringify(piano.coordinates)}
            data-piano-name={piano.name}
            data-piano-location={piano.location}
            class="hidden"
        />
    )
}
