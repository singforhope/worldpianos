                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                                        </svg>
                                        Piano Passport
                                    </a>
                                </li>
                                <li>
                                    <a href="/user/settings">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        Settings
                                    </a>
                                </li>
                            </ul>
                            
                            <div class="divider"></div>
                            
                            <button id="logout-btn" class="btn btn-outline btn-error w-full">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                </svg>
                                Logout
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Main Content -->
                <div class="lg:col-span-3">
                    <div class="flex justify-between items-center mb-8">
                        <h1 class="text-3xl font-bold">My Pianos</h1>
                        <div class="flex">
                            <!-- This button is hidden as we're using the one from the header -->
                            <div class="hidden">
                                <button id="page-piano-modal-btn" class="btn btn-primary btn-outline btn-sm mr-2 hidden sm:flex">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-5 w-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    Add Piano
                                </button>
                            </div>
                            <button class="btn btn-primary" onclick="document.getElementById('piano-modal').showModal()">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                                Add Piano
                            </button>
                        </div>
                    </div>
                    
                    <div id="pianos-list">
                        {userPianos && userPianos.length > 0 ? (
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                {userPianos.map((piano) => (
                                    <div class="card bg-base-100 shadow-xl">
                                        <div class="card-body">
                                            <h2 class="card-title">{piano.name}</h2>
                                            <p class="text-sm text-base-content/70">{piano.location}</p>
                                            <div class="flex items-center gap-2 mt-2">
                                                <span class={`badge ${piano.verified ? 'badge-success' : 'badge-warning'}`}>
                                                    {piano.verified ? 'Verified' : 'Pending Verification'}
                                                </span>
                                                {piano.public && (
                                                    <span class="badge badge-info">Public</span>
                                                )}
                                            </div>
                                            <p class="mt-4">{piano.description?.substring(0, 100)}{piano.description?.length > 100 ? '...' : ''}</p>
                                            <div class="card-actions justify-end mt-4">
                                                <a href={`/pianos/${piano.id}`} class="btn btn-primary btn-sm">View Details</a>
                                                <a href={`/pianos/edit/${piano.id}`} class="btn btn-outline btn-sm">Edit</a>
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        ) : (
                            <div class="card bg-base-100 shadow-xl">
                                <div class="card-body">
                                    <div class="alert">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        <span>You haven't added any pianos yet.</span>
                                    </div>
                                    <div class="flex justify-center mt-4">
                                        <button class="btn btn-primary" onclick="document.getElementById('piano-modal').showModal()">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                            </svg>
                                            Add Your First Piano
                                        </button>
                                    </div>
                                </div>
                            </div>
                        )}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Piano Modal -->
    <dialog id="piano-modal" class="modal">
        <div class="modal-box w-11/12 max-w-6xl h-[90vh]">
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-bold text-lg">Add a New Piano</h3>
                <form method="dialog">
                    <button class="btn btn-sm btn-outline absolute right-4 top-4 shadow-md">Close(Esc)</button>
                </form>
            </div>
            <div class="divider mt-0 mb-4"></div>
            <div class="py-2">
                <div class="container mx-auto px-4">
                    <div class="mx-auto">
                        <PianoForm isModal={true} />
                    </div>
                </div>
            </div>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>

    <script>
        // Add event listeners for the modal buttons
        document.addEventListener('DOMContentLoaded', () => {
            // Close button event listener
            const closeButtons = document.querySelectorAll('.modal form[method="dialog"] button');
            closeButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const modal = document.getElementById('piano-modal') as HTMLDialogElement;
                    if (modal) {
                        modal.close();
                    }
                });
            });
            
            // The open button is handled by the Header component
            // We don't need to add an event listener here
        });
    </script>
</MainLayout>

<script>
    import { auth, profile } from '../../utils/auth';
    
    // Listen for messages from the iframe
    window.addEventListener('message', function(event) {
        // Handle piano added message
        if (event.data && event.data.type === 'piano-added') {
            // Close the modal
            const pianoModal = document.getElementById('piano-modal') as HTMLDialogElement;
            if (pianoModal) pianoModal.close();
            // Show a success message
            alert(`Piano "${event.data.pianoName}" added successfully!`);
            // Reload the page to show the new piano
            window.location.reload();
        }
    });
    
    document.addEventListener('DOMContentLoaded', async () => {
        try {
            // Get loading and content elements
            const loadingState = document.getElementById('loading-state');
            const pianosContent = document.getElementById('pianos-content');
            
            // Check if user is authenticated on client-side
            const authenticated = await auth.isAuthenticated();
            const user = await auth.getCurrentUser();
            
            // Redirect if not authenticated
            if (!authenticated || !user) {
                // Store the current URL to redirect back after login
                auth.setReturnUrl(window.location.pathname);
                window.location.href = '/auth?error=You must be logged in to view your pianos';
                return;
            }
            
            try {
                // Check if profile exists and create if needed
                let userProfile = await profile.getUserProfile(user.id);
                
                if (!userProfile) {
                    const displayName = user.user_metadata?.display_name || user.email?.split('@')[0] || 'User';
                    const { data, error } = await profile.createUserProfile(user.id, displayName);
                    
                    if (data) {
                        userProfile = Array.isArray(data) ? data[0] : data;
                        // Reload the page to show the new profile
                        window.location.reload();
                    }
                } else {
                    // Update the UI with the user's data
                    const nameElement = document.getElementById('sidebar-name');
                    const emailElement = document.getElementById('sidebar-email');
                    const avatarImg = document.getElementById('sidebar-avatar') as HTMLImageElement;
                    
                    if (nameElement) {
                        nameElement.textContent = userProfile.display_name || user.email?.split('@')[0] || 'User';
                    }
                    
                    if (emailElement) {
                        emailElement.textContent = user.email || 'No email available';
                    }
                    
                    if (avatarImg && userProfile.avatar_url) {
                        avatarImg.src = userProfile.avatar_url;
                    }
                    
                    // Hide loading state and show pianos content
                    if (loadingState) loadingState.classList.add('hidden');
                    if (pianosContent) pianosContent.classList.remove('hidden');
                }
            } catch (profileError) {
                // Show pianos content even if profile fetch fails
                if (loadingState) loadingState.classList.add('hidden');
                if (pianosContent) pianosContent.classList.remove('hidden');
            }
            
            // Setup logout button
            const logoutBtn = document.getElementById('logout-btn');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    await auth.signOut();
                    window.location.href = '/';
                });
            }
        } catch (error) {
            // Fallback error handling - ensure UI is not stuck in loading state
            const loadingState = document.getElementById('loading-state');
            const pianosContent = document.getElementById('pianos-content');
            
            if (loadingState) loadingState.classList.add('hidden');
            if (pianosContent) pianosContent.classList.remove('hidden');
        }
    });
</script>