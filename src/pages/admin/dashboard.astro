                                            <td>{event.date}</td>
                                            <td>
                                                <span class={`badge ${event.status === 'upcoming' ? 'badge-primary' : event.status === 'ongoing' ? 'badge-success' : 'badge-secondary'}`}>
                                                    {event.status}
                                                </span>
                                            </td>
