---
import MainLayout from "../../layouts/MainLayout.astro";
import { supabase } from "../../utils/supabase";
import { auth, profile } from "../../utils/auth";

// Add a class to the body to indicate this is an auth-required page
const authRequiredClass = 'auth-required';

// Authentication check
const authenticated = await auth.isAuthenticated();
const user = await auth.getCurrentUser();

// For server-side rendering, we'll set a flag but not redirect immediately
// Client-side JS will handle the redirect if needed
let authFailed = false;
let adminFailed = false;

if (!authenticated || !user) {
    authFailed = true;
}

// Initialize variables
let userProfile = null;
let isAdmin = false;

// Only fetch data if user is authenticated
if (user && !authFailed) {
    // Get user profile
    userProfile = await profile.getUserProfile(user.id);
    
    // Check if user is admin
    isAdmin = await profile.isAdmin(user.id);
    
    if (!isAdmin) {
        adminFailed = true;
    }
}

// Define body classes for authentication state
const bodyClasses = [
    authRequiredClass,
    authFailed ? 'auth-required-not-authenticated' : 'auth-required-authenticated',
    adminFailed ? 'admin-required-not-admin' : 'admin-required-admin'
].join(' ');

// Get stats
const { count: pianoCount } = await supabase
    .from('pianos')
    .select('*', { count: 'exact', head: true });

const { count: eventCount } = await supabase
    .from('events')
    .select('*', { count: 'exact', head: true });

const { count: userCount } = await supabase
    .from('user_profiles')
    .select('*', { count: 'exact', head: true });

const { count: reportCount } = await supabase
    .from('piano_reports')
    .select('*', { count: 'exact', head: true });

// Get recent pianos
const { data: recentPianos } = await supabase
    .from('pianos')
    .select('*')
    .order('created_at', { ascending: false })
    .limit(5);

// Get recent events
const { data: recentEvents } = await supabase
    .from('events')
    .select('*')
    .order('created_at', { ascending: false })
    .limit(5);

// Get pending reports
const { data: pendingReports } = await supabase
    .from('piano_reports')
    .select('*')
    .eq('status', 'pending')
    .order('created_at', { ascending: false })
    .limit(5);
---

